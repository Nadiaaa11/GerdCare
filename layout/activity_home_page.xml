<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".HomePage">

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_marginBottom="70dp"
       >
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="40dp"
               android:layout_marginTop="100dp"
               android:fontFamily="@font/inter_variable"
               android:lineHeight="32sp"
               android:text="It's Time to \nBrunch!"
               android:textColor="#101623"
               android:textSize="22sp"
               android:textStyle="bold"
               />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="180dp"
               android:layout_marginTop="50dp"
               android:src="@drawable/kue" />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/rect"
               android:layout_marginStart="36dp"
               android:layout_marginTop="177dp"
               />

           <TextView
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="50dp"
               android:layout_marginTop="188dp"
               android:fontFamily="@font/inter_variable"
               android:text="look at your meal schedule!"
               android:textColor="#FFFFFF"
               android:textSize="8sp"
               android:textStyle="bold"/>

           <FrameLayout
               android:id="@+id/fAtas"
               android:layout_width="350dp"
               android:layout_height="120dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="250dp"
               android:background="@drawable/radius"
               android:backgroundTint="#F9B5D0"
               >

               <ImageButton
                   android:id="@+id/pizza"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#F9B5D0"
                   android:src="@drawable/pizza"
                   android:layout_gravity="center"
                   android:layout_marginEnd="115dp"
                   />
               <ImageButton
                   android:id="@+id/drop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/drop"
                   android:backgroundTint="#F9B5D0"
                   android:layout_gravity="center"
                   android:layout_marginEnd="27dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="230dp"
                   android:layout_marginTop="30dp"
                   android:fontFamily="@font/inter_variable"
                   android:lineHeight="32sp"
                   android:text="Next Meal"
                   android:textColor="#FF597B"
                   android:textSize="14sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="228dp"
                   android:layout_marginTop="50dp"
                   android:fontFamily="@font/inter_variable"
                   android:lineHeight="32sp"
                   android:text="1 h 20 m"
                   android:textColor="#FFFFFF"
                   android:textSize="18sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="240dp"
                   android:layout_marginTop="73dp"
                   android:fontFamily="@font/inter_variable"
                   android:lineHeight="32sp"
                   android:text="Lunch"
                   android:textColor="#FFFFFF"
                   android:textSize="14sp"
                   android:textStyle="bold" />

           </FrameLayout>

           <FrameLayout
               android:id="@+id/fMenu"
               android:layout_width="350dp"
               android:layout_height="120dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="380dp"
               android:background="@drawable/radius"
               android:backgroundTint="#EEEEEE"
               >

               <ImageButton
                   android:layout_width="101dp"
                   android:layout_height="100dp"
                   android:background="#00000000"
                   android:src="@drawable/meal"
                   android:layout_marginStart="10dp"
                   />

               <ImageButton
                   android:layout_width="101dp"
                   android:layout_height="100dp"
                   android:background="#00000000"
                   android:src="@drawable/hospital"
                   android:layout_marginStart="85dp"/>

               <ImageButton
                   android:layout_width="101dp"
                   android:layout_height="100dp"
                   android:background="#00000000"
                   android:scaleX="1"
                   android:scaleY="1"
                   android:src="@drawable/pharmacy"
                   android:layout_marginStart="170dp"/>
               <ImageButton
                   android:layout_width="101dp"
                   android:layout_height="100dp"
                   android:background="#00000000"
                   android:src="@drawable/ambulance"
                   android:layout_marginStart="240dp"
                   />
           </FrameLayout>

           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="490dp"
               >
               <ImageView
                   android:id="@+id/mycondition"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/cta_3"
                   />

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/btn_mycondition"
                   android:background="#F9B5D0"
                   android:layout_marginStart="130dp"
                   android:layout_marginTop="76dp"
                   />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dokter"
                   />
           </FrameLayout>

           <ImageView
               android:id="@+id/health_article"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/text_health"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="650dp"
               />

           <androidx.cardview.widget.CardView
               android:layout_width="340dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/health_article"
               android:layout_centerHorizontal="true"
               android:elevation="0dp"
               >

               <ImageView
                   android:id="@+id/imageView2"
                   android:layout_width="20dp"
                   android:layout_height="25dp"
                   android:src="@drawable/bookmark"
                   android:layout_gravity="right"
                   android:layout_margin="5dp"
                   />

               <ImageView
                   android:id="@+id/imageView"
                   android:layout_width="55dp"
                   android:layout_height="46dp"
                   android:src="@drawable/image_lambung"
                   android:layout_gravity="left"
                   android:layout_margin="5dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="GERD: Symptoms, Causes, Treatments, \nRemedies for Relief"
                   android:layout_marginStart="70dp"
                   android:layout_marginTop="10sp"
                   android:textSize="10sp"
                   android:fontFamily="@font/inter_variable"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Jun 10, 2021  |  5min read"
                   android:fontFamily="@font/inter_variable"
                   android:textSize="8sp"
                   android:textColor="#ADADAD"
                   android:layout_marginStart="70dp"
                   android:layout_marginTop="35dp"
                   />
           </androidx.cardview.widget.CardView>


       </RelativeLayout>
   </ScrollView>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/menu_bawah_actdua"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:tabMode="fixed"
        app:tabIndicatorHeight="0dp"/>
</RelativeLayout>
